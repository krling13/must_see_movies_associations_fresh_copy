<div class="page-header">
  <h3>Casting #<%= @casting.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd><%= Movie.find_by({:id=> @casting.movie_id}).title %></dd>

      <dt>Actor</dt>
      <dd><%= Actor.find_by({:id=> @casting.actor_id}).name %></dd>

      <dt>Name</dt>
      <dd><%= @casting.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/castings" class="btn btn-primary">
        Back
      </a>
      <a href="/castings/<%= @casting.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_casting/<%= @casting.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
