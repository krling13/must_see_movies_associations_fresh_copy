<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>
      <dt>Director</dt>
      <dd><%= Director.find_by({:id=>@movie.director_id}).name %></dd>
      <dt>Character Count</dt>
      <dd><%= Casting.where({:movie_id => @movie.id }).count %></dd>
      <dt>Characters</dt>
      <% Casting.where({:movie_id => @movie.id }).each do |char| %>
        <dd><%= char.name %></dd>
      <%end%>
      <dt>Image</dt>
      <dd><img src="<%= @movie.image_url %>"></dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
